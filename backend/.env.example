# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/colosseum

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_here

# Server Configuration
PORT=5000
NODE_ENV=production

# Frontend URL for CORS
FRONTEND_URL=https://your-frontend-url.com

# Upstash Redis Configuration
REDIS_URL=redis://username:password@upstash-redis-url:port
# For TLS connection (recommended for Upstash)
# REDIS_URL=rediss://username:password@upstash-redis-url:port

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Email Configuration (if using nodemailer)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password
