<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tournament</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Optional: Link to your CSS -->
</head>
<body>
    <div class="PointsTable">
        <div class="header">
            <p>Position</p>
            <p>Team</p>
            <p>Total Points</p>
        </div>
        <div class="data">
            <% if (pointsTable.length > 0) { %>
                <% pointsTable.forEach(entry => { %>
                    <div class="row">
                        <p><%= entry.ranking %></p>
                        <p><%= entry.teamName %></p>
                        <p><%= entry.totalPoints %></p>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No data available</p>
            <% } %>
        </div>
    </div>
</body>
</html>
