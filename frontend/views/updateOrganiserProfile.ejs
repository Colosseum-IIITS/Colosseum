<body>
    <h1>Update Profile</h1>

    <div class="form-card">
        <!-- Form to update username -->
        <form action="/api/organiser/updateUsername" method="POST">
            <label for="username">New Username:</label>
            <input type="text" id="username" name="newUsername" value="<%= organiser.username %>" required>
            <button type="submit">Update Username</button>
        </form>
    </div>

    <div class="form-card">
        <!-- Form to update email -->
        <form action="/api/organiser/updateEmail" method="POST">
            <label for="email">New Email:</label>
            <input type="email" id="email" name="newEmail" value="<%= organiser.email %>" required>
            <button type="submit">Update Email</button>
        </form>
    </div>

    <div class="form-card">
        <!-- Form to update description -->
        <form action="/api/organiser/updateDescription" method="POST">
            <label for="description">New Description:</label>
            <textarea id="description" name="newDescription" required><%= organiser.description %></textarea>
            <button type="submit">Update Description</button>
        </form>
    </div>

    <div class="form-card">
        <!-- Form to update profile photo -->
        <form action="/api/organiser/updateProfilePhoto" method="POST">
            <label for="profilePhoto">New Profile Photo URL:</label>
            <input type="text" id="profilePhoto" name="newProfilePhoto" value="<%= organiser.profilePhoto %>" required>
            <button type="submit">Update Profile Photo</button>
        </form>
    </div>

    <div class="form-card">
        <!-- Form to update password -->
        <form action="/api/organiser/updatePassword" method="POST">
            <label for="currentPassword">Current Password:</label>
            <input type="password" id="currentPassword" name="currentPassword" required>

            <label for="newPassword">New Password:</label>
            <input type="password" id="newPassword" name="newPassword" required>

            <button type="submit">Update Password</button>
        </form>
    </div>

    <a href="/api/organiser/<%= organiser.username %>/dashboard">Back to Dashboard</a>
</body>
