
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Points Table</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Points Table - <%= tournament.name %></h1>

        <!-- Points Table with Update Feature -->
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Ranking</th>
                    <th>Team Name</th>
                    <th>Total Points</th>
                    <th>Update Points</th>
                </tr>
            </thead>
            <tbody>
                <% tournament.pointsTable.forEach(function(entry, index) { %>
                    <tr>
                        <td><%= entry.ranking %></td>
                        <td><%= entry.teamName %></td>
                        <td><%= entry.totalPoints %></td>
                        <td>
                            <!-- Form for updating points of a specific team -->
                            <form action="/api/tournament/updateTable" method="POST" class="form-inline">
                                <!-- Tournament ID (hidden) -->
                                <input type="hidden" name="tournamentId" value="<%= tournament._id %>">
                                
                                <!-- Team Name (hidden) -->
                                <input type="hidden" name="teamName" value="<%= entry.teamName %>">

                                <!-- Input for additional points -->
                                <div class="form-group mr-2">
                                    <input type="number" name="additionalPoints" class="form-control" placeholder="Points" required>
                                </div>

                                <!-- Submit button -->
                                <button type="submit" class="btn btn-primary">Update</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <!-- Back to Tournament Details Button -->
        <a href="/api/tournament/<%= tournament._id %>" class="btn btn-secondary mt-3">Back to Tournament Details</a>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
